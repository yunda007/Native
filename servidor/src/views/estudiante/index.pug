html
    head
        title Maestros
    body
        a(href="http://localhost:4000/estudiante/create") Agregar
        table
            tr
                td Id
                td Nombre
                td Apellido
                td Edad
                td Telefono
                td Email
                td Acudiente 
                td foto
                td opciones
            for row, index in data
                tr
                    td #{index + 1}
                    td #{row.nombre}
                    td #{row.apellido}
                    td #{row.edad}
                    td #{row.telefono}
                    td #{row.email}
                    td #{row.acudiente}
                    td #{row.foto}
                    td
                        form(action=`/estudiante/${row.id_estudiante}?_method=DELETE`, method="post")
                            input(type="submit", value="Eliminar")
                            a(href=`/estudiante/${row.id_estudiante}/edit`) Editar
