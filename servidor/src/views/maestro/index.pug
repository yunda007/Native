html
    head
        title Maestros
    body
        a(href="http://localhost:4000/maestro/create") Agregar
        table
            tr
                td Id
                td Nombre
                td Apellido
                td Edad
                td Telefono
                td Email
                td Especializado 
                td foto
                td opciones
            for row, index in data
                tr
                    td #{index + 1}
                    td #{row.nombre}
                    td #{row.apellido}
                    td #{row.edad}
                    td #{row.telefono}
                    td #{row.email}
                    td #{row.especializado}
                    td #{row.foto}
                    td
                        form(action=`/maestro/${row.id_maestro}?_method=DELETE`, method="post")
                            input(type="submit", value="Eliminar")
                            a(href=`/maestro/${row.id_maestro}/edit`) Editar
